<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="connection.url">jdbc:mysql://localhost:3306/mydb</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
      <mapping class="korotaev.Entity.Achievement"/>
      <mapping class="korotaev.Entity.Achievmenttype"/>
      <mapping class="korotaev.Entity.Auto"/>
      <mapping class="korotaev.Entity.Message"/>
      <mapping class="korotaev.Entity.Messagetype"/>
      <mapping class="korotaev.Entity.Region"/>
      <mapping class="korotaev.Entity.Request"/>
      <mapping class="korotaev.Entity.Requeststatus"/>
      <mapping class="korotaev.Entity.Requesttype"/>
      <mapping class="korotaev.Entity.Session"/>
      <mapping class="korotaev.Entity.Tool"/>
      <mapping class="korotaev.Entity.Tooltypes"/>
      <mapping class="korotaev.Entity.TransmissionType"/>
      <mapping class="korotaev.Entity.User"/>
      <mapping class="korotaev.Entity.Userstatus"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>